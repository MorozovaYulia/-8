#include <iostream>
#include <string>
using namespace std; 
#include <math.h> 
int main() 
{ 
  int a; 
  cout << "Enter the number \n" ; 
  cin >> a ; 
  if (a==0) 
    cout << "it is zero "; 
  else  
    if (a>0) 
      if (a%2==0) 
        cout << " it is a positive even number"; 
      else  
        cout << " it is a positive odd number"; 
    else 
      if (a%2==0) 
        cout << " it is a negative even number"; 
      else  
        cout << " it is a negative odd number"; 
} 
